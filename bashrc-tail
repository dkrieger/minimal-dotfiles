
# ======== ADDITIONS ========

# https://superuser.com/a/39995
pathadd() {
    if [ -d "$1" ] && [[ ":$PATH:" != *":$1:"* ]]; then
        PATH="${PATH:+"$PATH:"}$1"
    fi
}

# https://serverfault.com/a/41524
include() {
    for FILE in $( find "$1" -type f -print | sort )
    do
	printf "sourcing $FILE\n"
	source $FILE
    done
}

umask 002

include $HOME/bashrc-parts

